<style>
	html,
	body {
		height: 100%;
		margin: 0;
	}

	.box {
		display: flex;
		flex-flow: column;
		height: 100%;
	}

	.box .box-header {
		flex-grow: 0;
		flex-shrink: 1;
		flex-basis: auto;
		display: flex;
		justify-content: center;
		text-align: center;
	}

	.box .box-content {
		flex-grow: 1;
		flex-shrink: 1;
		flex-basis: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
	}

	.box .box-content img {
		flex-shrink: 0;
		max-width: 100%;
		max-height: 100%;
	}
